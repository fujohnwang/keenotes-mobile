<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - use primary text color, background provides the highlight -->
    <item android:color="@color/text_primary" android:state_checked="true" />
    <!-- Default state - use secondary text color -->
    <item android:color="@color/text_secondary" />
</selector>
