<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Content -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customTabBar" />

    <!-- Custom iOS-style Capsule Tab Bar -->
    <LinearLayout
        android:id="@+id/customTabBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:background="@color/surface"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Note Tab -->
        <LinearLayout
            android:id="@+id/tabNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/tab_capsule_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/tabNoteIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_note"
                android:contentDescription="Note" />

            <TextView
                android:id="@+id/tabNoteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Note"
                android:textSize="11sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Review Tab -->
        <LinearLayout
            android:id="@+id/tabReview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/tab_capsule_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/tabReviewIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_review"
                android:contentDescription="Review" />

            <TextView
                android:id="@+id/tabReviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Review"
                android:textSize="11sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/tabSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/tab_capsule_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/tabSettingsIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings" />

            <TextView
                android:id="@+id/tabSettingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Settings"
                android:textSize="11sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
