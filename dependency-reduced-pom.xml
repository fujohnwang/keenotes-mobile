<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>cn.keevol</groupId>
  <artifactId>keenotes-mobile</artifactId>
  <name>KeeNotes Mobile</name>
  <version>1.0.0-SNAPSHOT</version>
  <description>A cross-platform mobile note-taking app built with JavaFX</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.css</include>
          <include>**/*.ttf</include>
          <include>**/*.otf</include>
          <include>**/*.png</include>
          <include>**/*.json</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.gluonhq</groupId>
        <artifactId>gluonfx-maven-plugin</artifactId>
        <version>${gluonfx.plugin.version}</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
          <attachList>
            <list>display</list>
            <list>lifecycle</list>
            <list>storage</list>
          </attachList>
          <resourcesList>
            <list>styles/main.css</list>
            <list>fonts/MiSans-Regular.ttf</list>
            <list>fonts/.*\\.ttf</list>
            <list>icons/app-icon.png</list>
            <list>META-INF/.*</list>
          </resourcesList>
          <reflectionList>
            <list>javafx.scene.text.Font</list>
          </reflectionList>
          <releaseConfiguration>
            <bundleName>KeeNotes</bundleName>
            <bundleVersion>1.0.0</bundleVersion>
            <bundleShortVersion>1.0</bundleShortVersion>
          </releaseConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>desktop</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.5.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>${main.class}</mainClass>
                    </transformer>
                    <transformer />
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-base</artifactId>
          <version>${javafx.version}</version>
          <classifier>${javafx.platform}</classifier>
        </dependency>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-graphics</artifactId>
          <version>${javafx.version}</version>
          <classifier>${javafx.platform}</classifier>
        </dependency>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-controls</artifactId>
          <version>${javafx.version}</version>
          <classifier>${javafx.platform}</classifier>
        </dependency>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-fxml</artifactId>
          <version>${javafx.version}</version>
          <classifier>${javafx.platform}</classifier>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>android</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.gluonhq</groupId>
            <artifactId>gluonfx-maven-plugin</artifactId>
            <configuration>
              <target>android</target>
              <nativeImageArgs>
                <arg>--initialize-at-build-time=org.sqlite.util.ProcessRunner</arg>
                <arg>--initialize-at-build-time=org.sqlite.util.OSInfo</arg>
                <arg>--initialize-at-build-time=org.sqlite.SQLiteJDBCLoader</arg>
                <arg>--initialize-at-run-time=okhttp3</arg>
                <arg>--initialize-at-run-time=io.vertx</arg>
              </nativeImageArgs>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>ios</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.gluonhq</groupId>
            <artifactId>gluonfx-maven-plugin</artifactId>
            <configuration>
              <target>ios</target>
              <releaseConfiguration>
                <bundleName>KeeNotes</bundleName>
                <bundleVersion>1.0.0</bundleVersion>
                <bundleShortVersion>1.0</bundleShortVersion>
                <skipSigning>true</skipSigning>
              </releaseConfiguration>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>gluon-releases</id>
      <url>https://nexus.gluonhq.com/nexus/content/repositories/releases/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>gluon-releases</id>
      <url>https://nexus.gluonhq.com/nexus/content/repositories/releases/</url>
    </pluginRepository>
  </pluginRepositories>
  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <attach.version>4.0.21</attach.version>
    <main.class>cn.keevol.keenotes.mobilefx.Main</main.class>
    <gluonfx.plugin.version>1.0.25</gluonfx.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>23.0.1</javafx.version>
  </properties>
</project>
